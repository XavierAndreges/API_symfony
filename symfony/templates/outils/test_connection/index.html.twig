{% extends 'base.html.twig' %}

{% block title %}Test de Connexion{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 50px;">
        <h1>Test de Connexion à la Base de Données</h1>
        
        <div style="margin: 20px; padding: 20px; border-radius: 5px; 
                    {% if status == 'success' %}
                        background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb;
                    {% else %}
                        background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb;
                    {% endif %}">
            {{ message }}
        </div>

        <p>
            <a href="{{ path('app_home') }}" style="color: #007bff; text-decoration: none; font-size: 1.2em;">
                Retour à l'accueil
            </a>
        </p>
    </div>
{% endblock %} 